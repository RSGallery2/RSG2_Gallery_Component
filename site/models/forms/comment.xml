<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="comment">
		<field
				name="commentUserName"
				type="text"
				class="input"
				label="COM_RSGALLERY2_YOUR_NAME"
				description="COM_RSGALLERY2_YOUR_NAME_DESC"
				size="10"
				default=""
				filter="username"
				readonly="false"
		/>

		<field
				name="commentTitle"
				type="text"
				label="JGLOBAL_TITLE"
				description="JFIELD_TITLE_DESC"
				class="input-xxlarge input-large-text"
				size="120"
				required="true"
				filter="string"
		/>


		<field
				name="commentText"
				type="editor"
				label="COM_RSGALLERY2_ACCESS_COMPONENT_COMMENT"
				description="COM_RSGALLERY2_COMMENTS_FIELD_COMMENT_DESC"
				width="100%"
				height="250"
				cols="50"
				rows="5"
				default=""
				filter="safehtml"
		/>

	</fieldset>
</form>
