<?xml version="1.0" encoding="utf-8"?>
<extension type="template" 
		   version="3.0" 
           method="upgrade"
		   client="site"
>
	<name>schuweb</name>
	<version>1.0</version>
	<creationDate>07.03.2019</creationDate>
	<author>RSGallery2 Team / Schuweb creator</author>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>team@rsgallery2.org</authorEmail>
	<authorUrl>http://www.rsgallery2.org</authorUrl>
	<copyright>(c) 2019-2021 RSGallery2 Team</copyright>
	<description>Default slideshow that we have been shipping with for a while.</description>
	<files>
		<folder>html</folder>
		<folder>css</folder>
		<folder>js</folder>
		<filename>index.php</filename>
		<filename>display.class.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<css>
		<filename>css/template.css</filename>
	</css>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
						id="isAutoStart"
						name="isAutoStart"
						type="radio"
						default="1"
						label="COM_RSGALLERY2_SLIDESHOW_AUTOSTART"
						description="COM_RSGALLERY2_SLIDESHOW_AUTOSTART_DESC"
						class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				
				<field 
						id="isDisplayButtons"
						name="isDisplayButtons"
						type="radio"
						default="0"
						label="COM_RSGALLERY2_SHOW_BUTTONS"
						description="COM_RSGALLERY2_SHOW_BUTTONS_DESC"
						class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				
				<field 
						id="isButtonsAbove"
						name="isButtonsAbove"
						type="radio"
						default="0"
						label="COM_RSGALLERY2_BUTTONS_ABOVE"
						description="COM_RSGALLERY2_BUTTONS_ABOVE_SLIDESHOW_DESC"
						class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>