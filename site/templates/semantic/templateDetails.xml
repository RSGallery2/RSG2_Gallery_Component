<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="rsgTemplate">
	<name>Semantic</name>
	<version>3.0</version>
	<creationDate>25/01/2010</creationDate>
	<author>RSGallery2 Team</author>
	<authorEmail>team@rsgallery2.org</authorEmail>
	<authorUrl>http://www.rsgallery2.org</authorUrl>
	<copyright>(c) 2010-2019 RSGallery2 Team</copyright>
	<license>This component is released under the GNU/GPL License</license>
	<description>Default semantic template.</description>
	<files>
		<folder>html</folder>
		<filename>index.php</filename>
		<filename>display.class.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>changelog.txt</filename>
	</files>
	<css>
		<filename>css/template.css</filename>
	</css>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				 <field 
                        name="testParameter"
						type="list"
						default="white"
						label="Color Variation"
						description="Color variation to use">
					 <option value="blue">Blue</option>
					 <option value="red">Red</option>
					 <option value="green">Green</option>
					 <option value="orange">Orange</option>
					 <option value="black">Black</option>
					 <option value="white">White</option>
				 </field>
			</fieldset>
		</fields>
	</config>
</extension>
