<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="rsgTemplate">
	<name>Semantic</name>
	<version>3.0</version>
	<creationDate>25/01/2010</creationDate>
	<author>RSGallery2 Team</author>
	<authorEmail>team@rsgallery2.org</authorEmail>
	<authorUrl>http://www.rsgallery2.org</authorUrl>
	<copyright>(c) 2010-2018 RSGallery2 Team</copyright>
	<license>This component is released under the GNU/GPL License</license>
	<description>Default semantic template.</description>
	<files>
		<filename>index.php</filename>
		<filename>display.class.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>fields.ini</filename>
		<filename>changelog.txt</filename>
		<filename>html/exif.php</filename>
		<filename>html/gallery.php</filename>
		<filename>html/inline.php</filename>
		<filename>html/item_audio.php</filename>
		<filename>html/item_image.php</filename>
		<filename>html/item_video.php</filename>
		<filename>html/thumbs_float.php</filename>
		<filename>html/thumbs_table.php</filename>
	</files>
	<css>
		<filename>css/template.css</filename>
	</css>
	<config>
		<fields name="params">
			<fieldset name="advanced">
		        <field name="testParameter"
		               type="list"
		               default="white"
		               label="Color Variation"
		               description="Color variation to use">
			        <option value="blue">Blue</option>
			        <option value="red">Red</option>
			        <option value="green">Green</option>
			        <option value="orange">Orange</option>
			        <option value="black">Black</option>
			        <option value="white">White</option>
		        </field>
			</fieldset>
		</fields>
	</config>
</extension>
