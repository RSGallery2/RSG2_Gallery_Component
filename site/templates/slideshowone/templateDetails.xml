<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="rsgTemplate">
	<name>SlideshowOne</name>
	<version>2.0</version>
	<creationDate>2007</creationDate>
	<author>RSGallery2 Team</author>
	<authorEmail>team@rsgallery2.org</authorEmail>
	<authorUrl>http://www.rsgallery2.org</authorUrl>
	<copyright>(c) 2010-2018 RSGallery2 Team</copyright>
	<license>This component is released under the GNU/GPL License</license>
	<description>Default slideshow that we have been shipping with for a while.</description>
	<files>
		<folder>html</folder>
		<folder>css</folder>
		<filename>index.php</filename>
		<filename>display.class.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<css>
		<filename>css/template.css</filename>
	</css>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
						id="isAutoStart"
						name="isAutoStart"
						type="radio"
						default="1"
						label="COM_RSGALLERY2_SLIDESHOW_AUTOSTART"
						description="COM_RSGALLERY2_SLIDESHOW_AUTOSTART_DESC"
						class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				
				<field 
						id="isDisplayButtons"
						name="isDisplayButtons"
						type="radio"
						default="0"
						label="COM_RSGALLERY2_SHOW_BUTTONS"
						description="COM_RSGALLERY2_SHOW_BUTTONS_DESC"
						class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				
				<field 
						id="isButtonsAbove"
						name="isButtonsAbove"
						type="radio"
						default="0"
						label="COM_RSGALLERY2_BUTTONS_ABOVE"
						description="COM_RSGALLERY2_BUTTONS_ABOVE_SLIDESHOW_DESC"
						class="btn-group btn-group-yesno">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>