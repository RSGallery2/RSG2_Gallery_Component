<form>
	<fieldset name ="gallery_1st_col">
		<field
			name			= "name"
			type			= "text"
			label           = "COM_RSGALLERY2_NAME"
			description     = "COM_RSGALLERY2_NAME"
			maxlength       = "250"
			class           = "input-large-text input-xxlarge"
			filter          = ""
			size            = "60"
		/>

		<field
				name			= "alias"
				type			= "text"
				label           = "JFIELD_ALIAS_LABEL"
				description     = "JFIELD_ALIAS_DESC"
				maxlength       = "250"
				class           = "input-xlarge"
				filter          = ""
				size            = "40"
				hint            = "JFIELD_ALIAS_PLACEHOLDER"
		/>

		<field
				name			= "alias2"
				type			= "text"
				label           = "COM_RSGALLERY2_ALIAS"
				description     = ""
				maxlength       = "250"
				class           = "input-xlarge"
				filter          = ""
				size            = "60"
		/>

		<field
				name="access"
				type="accesslevel"
				label="JFIELD_ACCESS_LABEL"
				description="JFIELD_ACCESS_DESC"
		/>

		<field
			name			= "description"
			type			= "editor"
			label           = "COM_RSGALLERY2_DESCRIPTION"
			description     = ""
			rows 			= "5"
			filter          = "safehtml"
			class			= "span5 small"
		/>

        <field
			name			= "parent"
			type			= "ParentGalleryList"
			label           = "COM_RSGALLERY2_PARENT_ITEM"
			filter          = "integer"
			height 			= "450"
			size			= "10"
        >
			<!--option value="-1" >COM_RSGALLERY2_SELECT_GALLERY</option-->
			<option value="0" >COM_RSGALLERY2_TOP_GALLERY</option>
		</field>	

		<field
			name			= "thumb_id"
			type			= "RsgGalleryThumbList"
			label           = "COM_RSGALLERY2_GALLERY_THUMBNAIL"
			filter			= "integer"
			size			= "1"
        >
			<!--option value="-1" >COM_RSGALLERY2_SELECT_GALLERY</option-->
			<option value="0" >COM_RSGALLERY2_MINUS_RANDOM_THUMBNAIL_MINUS</option>
		</field>

		<field
				name="id"
				type			= "hidden"
		/>

	</fieldset>

	<fieldset name ="gallery_2nd_col">
		<field
				name            = "published"
				type            = "list"
				class           = "chzn-color-state  input-xlarge"
				id              = "published"
				label           = "JSTATUS"
				description     = "JFIELD_PUBLISHED_DESC"
				size            = "3"
				default         = "1"
				filter          = "integer"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name			= "ordering"
			type			= "RsgGalleryOrderingList"
			label           = "COM_RSGALLERY2_ORDERING"
			filter          = "integer"
			size			= "1"
		>
			<option value   = "0" >JOPTION_ORDER_FIRST</option>
			<!--option value   = "99999" >JOPTION_ORDER_LAST</option-->
		</field>

		<field
				name			= "uid"
				type			= "user"
				label           = "COM_RSGALLERY2_OWNER"
				description     = ""
				filter			= "unset"
		/>
	</fieldset>


	<fieldset name ="permission_col">
		<!-- asset_id: needed for the Calculated Settings of the Rules to work correctly -->
		<field
				name			= "asset_id"
				type			= "hidden"
				filter			= "unset"
		/>


		<!-- rules: needed for the rules -->
		<field
				id				= "rules"
				name			= "rules"
				type			= "rules"
				label			= ""
				translate_label	= "false"
				filter			= "rules"
				validate		= "rules"
				class			= "inputbox"
				component		= "com_rsgallery2"
				section			= "item"
		/>
	</fieldset>

