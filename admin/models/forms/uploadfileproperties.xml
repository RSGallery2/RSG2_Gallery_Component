<?xml version="1.0" encoding="utf-8"?>
<form enctype="multipart/form-data">
	<fieldset name="GallerySelect">


		<field
				name="fileName[]"
				type="hidden"
				label="COM_RSGALLERY2_NAME"
				description="COM_RSGALLERY2_IMAGE_NAME"
				class="small"
				size="120"
				required="true"
		/>
		<field
				name="title[]"
				type="text"
				label="JGLOBAL_TITLE"
				description="COM_RSGALLERY2_IMAGE_NAME"
				class="input"
				size="120"
				required="true"
                hint=">"
		/>

		<!-- Gallery selection -->
		<field
				name="galleryId[]"
				type="GallerySelectList"
				label="COM_RSGALLERY2_SELECT_GALLERY"
				description="COM_RSGALLERY2_SELECT_GALLERY_DESC"
				required="true"
				class="inputbox"
				addfieldpath="/administrator/components/com_rsgallery2/models/fields"
				multiple="false"
				size="1"
		/>

        <field
                name="description[]"
                type="textarea"
                default="default"
                label="Enter some html"
				description=""
                rows="10"
                cols="5"
                filter="raw"
        />


    </fieldset>


	<fieldset name="GallerySelectDisabled">


        <field
                name="fileName[]"
                type="text"
                label="COM_RSGALLERY2_NAME"
                description="COM_RSGALLERY2_IMAGE_NAME"
                class="input-large-text input-xxlarge"
                size="120"
                required="true"
        />
        <field
                name="title[]"
                type="text"
                label="JGLOBAL_TITLE"
                description="COM_RSGALLERY2_IMAGE_NAME"
                class="input-large-text input-xxlarge"
                size="120"
                required="true"
                hint=">"
        />

        <!-- Gallery selection -->
		<field
				name="galleryId[]"
				type="GallerySelectList"
				disabled="true"
				label="COM_RSGALLERY2_SELECT_GALLERY"
				description="COM_RSGALLERY2_SELECT_GALLERY_DESC"
				required="true"
				class="inputbox"
				addfieldpath="/administrator/components/com_rsgallery2/models/fields"
				multiple="false"
				size="1"
		/>

        <field
                name="description[]"
                type="textarea"
                default="default"
                label="Enter some html"
                description=""
                rows="10"
                cols="5"
                filter="raw"
        />

    </fieldset>
</form>
