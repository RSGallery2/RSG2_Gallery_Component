<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fieldset name ="image_1st_col">
		<field
			name			= "title"
			type			= "text"
			label           = "COM_RSGALLERY2_NAME"
			description     = "JFIELD_TITLE_DESC"
				class="input-xxlarge input-large-text"
				size="120"
				required="true"
		/>

		<field
			name			= "alias"
			type			= "text"
			label           = "COM_RSGALLERY2_ALIAS"
			description     = ""
			maxlength       = "250"
			filter          = ""
			size            = "60"
		/>
		
		<field
			name			= "userid"
			type			= "user"
			label           = "COM_RSGALLERY2_OWNER"
			description     = ""
		/>


		<field
			name			= "name"
			type			= "text"
			label           = "COM_RSGALLERY2_FILENAME"
			description     = ""
			maxlength       = "250"
			filter          = ""
			size            = "60"
			class			= "readonly"
			readonly		= "true"			
		/>

        <field
			name			= "gallery_id"
			type			= "GalleryList"
			label           = "COM_RSGALLERY2_GALLERY"
			filter          = "integer"
			height 			= "450"
			size			= "10"
        >
			<option value="-1" >COM_RSGALLERY2_SELECT_GALLERY</option>
			<option value="0" >COM_RSGALLERY2_TOP_GALLERY</option>
		</field>	

		<!-- parameters
			Bad size			= "10"
		
			height 			= "150"
			width 			= "30%"		
		-->
		<field
			name			= "description"
			type			= "editor"
			label           = "COM_RSGALLERY2_DESCRIPTION"
			description     = ""
			filter          = "safehtml"
			class			= "span5"
			rows            = "10"
		/>

		<field
			name			= "ordering"
			type			= "RsgImageOrderingList"
			label           = "COM_RSGALLERY2_ORDERING"
			filter          = "integer"
			size			= "1"
		>
			<option value   = "0" >JGLOBAL_NEWITEMSLAST_DESC</option>
		</field>	
			
		<field
			name            = "published"
			type            = "radio"
			class           = "btn-group btn-group-yesno"
			id              = "published"
			label           = "JSTATUS"
			description     = "JFIELD_PUBLISHED_DESC"
			size            = "1"
			default         = "1"
			filter          = "integer"
		>
			<option value="1" >JPUBLISHED</option>
			<option value="0" >JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>			
		</field>	
		<field
				name="id"
			type			= "hidden"
		/>
    </fieldset>	
	
	<fieldset name ="image_2nd_col">	
        <field 
			name			= "name"
            type			= "RsgImageView"
            label           = "COM_RSGALLERY2_ITEM_PREVIEW"
        />

	    <!-- asset_id: needed for the Calculated Settings of the Rules to work correctly -->
	    <field 
		    name			= "asset_id"
		    type			= "hidden"
		    filter			= "unset"
        />
    
	
	    <!-- rules: needed for the rules -->
	    <field
		    id				= "rules"
		    name			= "rules"
		    type			= "rules"
		    label			= ""
		    translate_label	= "false"
		    filter			= "rules"
		    validate		= "rules"
		    class			= "inputbox"
		    component		= "com_rsgallery2"
		    section			= "item"
        />
		

    </fieldset>
	
	<!-- fieldset 
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
	-->
	
</form>