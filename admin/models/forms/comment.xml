<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fieldset name ="image_1st_col">
		<field
				name="id"
				type="text"
				class="readonly"
				label="JGLOBAL_FIELD_ID_LABEL"
				description ="JGLOBAL_FIELD_ID_DESC"
				default="0"
				readonly="true"
				filter="unset"
		/>
		<field name="title"
		       type="text"
		       label="JGLOBAL_TITLE"
		       description="JFIELD_TITLE_DESC"
		       class="input-xxlarge input-large-text"
		       size="40"
		       required="true" />

		<field
			name			= "user_id"
			type			= "user"
			label           = "COM_RSGALLERY2_OWNER"
			description     = ""
		/>


		<field
				name			= "user_name"
				type			= "text"
				label           = "COM_RSGALLERY2_USERNAME"
				description     = ""
				maxlength       = "250"
				filter          = ""
				size            = "60"
				class			= "readonly"
				readonly		= "true"
		/>

		<field
				name			= "user_ip"
				type			= "text"
				label           = "COM_RSGALLERY2_USER_IP"
				description     = ""
				maxlength       = "50"
				filter          = ""
				size            = "60"
				class			= "readonly"
				readonly		= "true"
		/>

		<field
				name="parent_id"
				type="categoryedit"
				label="COM_CATEGORIES_FIELD_PARENT_LABEL"
				description="COM_CATEGORIES_FIELD_PARENT_DESC"
		/>

		<field
				name="item_id"
				type="categoryedit"
				label="COM_CATEGORIES_ITEM_ID_LABEL"
				description="COM_CATEGORIES_ITEM_ID_DESC"
		/>

		<field
				name="item_table"
				type="text"
				label="COM_RSGALLERY2_COMMENTS_FIELD_ITEM_TABLE_LABEL"
				description="COM_RSGALLERY2_COMMENTS_FIELD_ITEM_TABLE_DESC"
				class="inputbox"
				size="50"
				maxlength="50"
		>
		</field>

		<field
				name="datetime"
				type="calendar"
				label="COM_RSGALLERY2_COMMENTS_FIELD_DATETIME_LABEL"
				description="COM_RSGALLERY2_COMMENTS_FIELD_DATETIME_DESC"
				class="inputbox"
				size="22"
				maxlength="25"
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
		/>

		<field
				name="subject"
				type="text"
				label="COM_RSGALLERY2_COMMENTS_FIELD_SUBJECT_LABEL"
				description="COM_RSGALLERY2_COMMENTS_FIELD_SUBJECT_DESC"
				class="inputbox"
				size="100"
				maxlength="100"
		/>

		<field
				name="comment"
				type="editor"
				label="COM_RSGALLERY2_COMMENTS_FIELD_COMMENT_LABEL"
				description="COM_RSGALLERY2_COMMENTS_FIELD_COMMENT_DESC"
				width="100%"
				height="250"
				cols="50"
				rows="5"
				default=""
		/>

		<field
				name="published"
				type="checkbox"
				label="COM_RSGALLERY2_COMMENTS_FIELD_PUBLISHED_LABEL"
				description="COM_RSGALLERY2_COMMENTS_FIELD_PUBLISHED_DESC"
				class="inputbox"
				value="1"
		/>

		<field
				name="checked_out"
				type="hidden"
				filter="unset"
		/>
		<field
				name="checked_out_time"
				type="hidden"
				filter="unset"
		/>

		<field
				name="ordering"
				label="JFIELD_ORDERING_LABEL"
				description="JFIELD_ORDERING_DESC"
				type="testgallery01ordering"
				table="#__testgallery01_commentses"
		/>

		<field
				name="params"
				type="text"
				label="COM_RSGALLERY2_COMMENTS_FIELD_PARAMS_LABEL"
				description="COM_RSGALLERY2_COMMENTS_FIELD_PARAMS_DESC"
				class="inputbox"
				size="100"
				maxlength="100"
		/>

		<field
				name="hits"
				type="text"
				label="JGLOBAL_HITS"
				description="COM_RSGALLERY2_COMMENTS_FIELD_HITS_DESC"
				class="readonly"
				size="6"
				readonly="true"
				filter="unset"
		/>
	</fieldset>
	
	<!-- fieldset 
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
	-->
	
</form>