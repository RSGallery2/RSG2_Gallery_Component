<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fieldset name="comment">
		<field
				name="id"
				type="text"
				class="readonly"
				label="JGLOBAL_FIELD_ID_LABEL"
				description="JGLOBAL_FIELD_ID_DESC"
				size="10"
				default="0"
				readonly="true"
		/>

		<field
				name="subject"
				type="text"
				label="JGLOBAL_TITLE"
				description="JFIELD_TITLE_DESC"
				class="input-xxlarge input-large-text"
				size="120"
				required="true"
		/>

		<field
				name="user_id"
				type="user"
				label="JGRID_HEADING_CREATED_BY"
				description="JGLOBAL_FIELD_CREATED_BY_DESC"
		/>

		<field
				name="user_name"
				type="text"
				label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL"
				description="JGLOBAL_FIELD_CREATED_BY_ALIAS_DESC"
				maxlength="250"
				filter=""
				size="60"
				readonly="true"
		/>

		<field
				name="user_ip"
				type="text"
				label="COM_RSGALLERY2_USER_IP"
				description="COM_RSGALLERY2_COMMENT_USER_IP_DESC"
				maxlength="50"
				filter=""
				size="60"
				readonly="true"
		/>

		<field
				name="parent_id"
				type="categoryedit"
				label="COM_RSGALLERY2_COMMENT_PARENT_COMMENT"
				description="COM_RSGALLERY2_COMMENT_PARENT_ID_DESC"
		/>

		<field
				name="item_id"
				type="categoryedit"
				label="COM_RSGALLERY2_IMAGE_ID"
				description="COM_RSGALLERY2_COMMENT_IMAGE_ID_DESC"
		/>

		<field
				name="item_table"
				type="text"
				label="COM_RSGALLERY2_COMMENT_COMPONENT"
				description="COM_RSGALLERY2_COMMENT_COMPONENT_DESC"
				class="inputbox"
				size="50"
				maxlength="50"
		>
		</field>

		<field
				name="datetime"
				type="calendar"
				label="JGLOBAL_FIELD_CREATED_DESC"
				description="JGLOBAL_FIELD_CREATED_LABEL"
				class="inputbox"
				size="22"
				maxlength="25"
				format="%Y-%m-%d %H:%M:%S"
				filter="user_utc"
		/>

		<field
				name="comment"
				type="editor"
				label="COM_RSGALLERY2_ACCESS_COMPONENT_COMMENT"
				description="COM_RSGALLERY2_COMMENTS_FIELD_COMMENT_DESC"
				width="100%"
				height="250"
				cols="50"
				rows="5"
				default=""
		/>

		<field name="published"
		       type="list"
		       label="JSTATUS"
		       description="JFIELD_PUBLISHED_DESC"
		       class="chzn-color-state"
		       filter="intval"
		       size="1"
		       default="1"
		>
			<option value="1">
				JPUBLISHED
			</option>
			<option value="0">
				JUNPUBLISHED
			</option>
			<option value="2">
				JARCHIVED
			</option>
			<option value="-2">
				JTRASHED
			</option>
		</field>

		<field
				name="checked_out"
				type="hidden"
				filter="unset"
		/>
		<field
				name="checked_out_time"
				type="hidden"
				filter="unset"
		/>

		<field name="ordering"
		       type="text"
		       label="JFIELD_ORDERING_LABEL"
		       description="JFIELD_ORDERING_DESC"
		       size="6"
		       default="0"
		/>

		<field name="ordering"
		       type="text"
		       label="JFIELD_ORDERING_LABEL"
		       description="JFIELD_ORDERING_DESC"
		       size="6"
		       default="0"
		/>

		<!--field
				name="params"
				type="text"
				label="COM_RSGALLERY2_COMMENTS_FIELD_PARAMS_LABEL"
				description="COM_RSGALLERY2_COMMENTS_FIELD_PARAMS_DESC"
				class="inputbox"
				size="100"
				maxlength="100"
		/-->

		<field name="hits"
		       type="text"
		       label="JGLOBAL_HITS"
		       description="COM_CONTENT_FIELD_HITS_DESC"
		       class="readonly"
		       size="6"
		       readonly="true"
		       filter="unset"
		/>

	</fieldset>

	<!-- fieldset 
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
	-->

</form>